<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arkanoid.ui.controller.MainController">
  <top>
      <VBox alignment="CENTER" spacing="6" style="-fx-padding: 15;" BorderPane.alignment="CENTER">
          <ImageView fitHeight="300" fitWidth="500" preserveRatio="true">
              <image>
                  <Image url="@../../assets/images/arkanoid-logo.png" />
              </image>
          </ImageView>
      </VBox>
  </top>
  <center>
      <AnchorPane>
         <children>
          <VBox alignment="CENTER" spacing="28">
            <HBox alignment="CENTER" spacing="24" />
          </VBox>
         <Button fx:id="btnExit" layoutX="250.0" layoutY="136.0" prefHeight="54" prefWidth="305.0" styleClass="button-alt" text="Exit" />
        <Button fx:id="btnHighScores" layoutX="414.0" layoutY="62.0" prefHeight="54" prefWidth="200" styleClass="button-alt" text="High Scores" />
        <Button fx:id="btnStart" layoutX="178.0" layoutY="62.0" prefHeight="54" prefWidth="200" styleClass="button-main" text="Start Game" />
         <Button fx:id="btnContinue" layoutX="254.0" layoutY="-21.0" prefHeight="54" prefWidth="305.0" styleClass="button-main" text="Continue Game" />
         </children>
      </AnchorPane>
  </center>
</BorderPane>
