<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #0f172a;" stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="arkanoid.ui.controller.SelectSkinController">

    <VBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Tiêu đề -->
        <VBox alignment="CENTER" spacing="8">
            <Label style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: cyan;" text="SELECT SKIN" />
            <Label style="-fx-font-size: 18px; -fx-text-fill: #94a3b8;" text="Choose your favorite Ball or Paddle skin" />
        </VBox>

        <!-- Vùng hiển thị danh sách skin -->
        <StackPane fx:id="skinContainer" prefHeight="300" prefWidth="600">
         <children>
      
              <!-- Hai nút Ball / Paddle -->
             <HBox alignment="CENTER" spacing="60">
                 <Button fx:id="ballButton"
                         text="Ball"
                         onAction="#showBallSkins"
                         prefWidth="220" prefHeight="60"
                         styleClass="button"
                         style="-fx-background-color: linear-gradient(to bottom, #17c0e9, #0ea5e9, #0369a1); -fx-text-fill: white;"/>

                 <Button fx:id="paddleButton"
                         text="Paddle"
                         onAction="#showPaddleSkins"
                         prefWidth="220" prefHeight="60"
                         styleClass="button"
                         style="-fx-background-color: linear-gradient(to bottom, #17c0e9, #0ea5e9, #0369a1); -fx-text-fill: white;"/>
             </HBox>

         </children>
        </StackPane>

        <!-- Nút quay lại -->
        <Button fx:id="backButton"
                text="Back"
                onAction="#goBack"
                prefWidth="180" prefHeight="50"
                styleClass="button"
                style="-fx-background-color: transparent; -fx-border-color: #ec4899; -fx-border-width: 2; -fx-border-radius: 14; -fx-text-fill: #ec4899;"/>

    </VBox>
</AnchorPane>
