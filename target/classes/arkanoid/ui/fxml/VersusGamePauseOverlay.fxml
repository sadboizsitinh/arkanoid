<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="arkanoid.ui.controller.VersusGamePauseOverlayController"
           stylesheets="@../css/style.css"
           style="-fx-background-color: rgba(0,0,0,0.75);"
           prefWidth="1296" prefHeight="740">

    <VBox alignment="CENTER" spacing="24" style="-fx-padding: 40;">

        <!-- Title -->
        <Label text="⏸GAME PAUSED"
               style="-fx-font-size: 48px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #fbbf24;
                      -fx-effect: dropshadow(gaussian, rgba(251, 191, 36, 0.8), 20, 0.7, 0, 0);"/>

        <!-- Subtitle -->
        <Label text="VERSUS MATCH ON HOLD"
               style="-fx-font-size: 18px;
                      -fx-text-fill: #8b93a5;
                      -fx-font-style: italic;"/>

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="16" style="-fx-padding: 20 0 0 0;">
            <Button text="Continue"
                    fx:id="btnContinue"
                    styleClass="button-main"
                    prefWidth="280"
                    prefHeight="56"
                    style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Button text="New Game"
                    fx:id="btnNewGame"
                    styleClass="button-main"
                    prefWidth="280"
                    prefHeight="56"
                    style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Button text="Main Menu"
                    fx:id="btnMenu"
                    styleClass="button-alt"
                    prefWidth="280"
                    prefHeight="56"
                    style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Controls Reminder -->
        <VBox alignment="CENTER" spacing="8" style="-fx-padding: 30 0 0 0;">
            <Label text="CONTROLS"
                   style="-fx-font-size: 16px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #8b93a5;"/>

            <HBox spacing="40" alignment="CENTER">
                <!-- P1 Controls -->
                <VBox alignment="CENTER" spacing="4">
                    <Label text="PLAYER 1"
                           style="-fx-font-size: 14px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #7CFC00;"/>
                    <Label text="A/D: Move | W: Fire"
                           style="-fx-font-size: 12px;
                                  -fx-text-fill: #8b93a5;"/>
                </VBox>

                <!-- P2 Controls -->
                <VBox alignment="CENTER" spacing="4">
                    <Label text="PLAYER 2"
                           style="-fx-font-size: 14px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #00BFFF;"/>
                    <Label text="←/→: Move | ↑: Fire"
                           style="-fx-font-size: 12px;
                                  -fx-text-fill: #8b93a5;"/>
                </VBox>
            </HBox>

            <Label text="P: Pause | ESC: Menu"
                   style="-fx-font-size: 12px;
                          -fx-text-fill: #8b93a5;
                          -fx-padding: 8 0 0 0;"/>
        </VBox>

    </VBox>

</StackPane>