<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="600" prefWidth="1000" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arkanoid.ui.controller.GameController">

    <!-- LEFT PANEL - STATS -->
    <VBox prefWidth="200" style="-fx-background-color: #0f172a; -fx-padding: 20; -fx-spacing: 20; -fx-border-color: #0ea5e9; -fx-border-width: 0 2 0 0;">

        <!-- Title -->
        <Label text="GAME INFO" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0ea5e9; -fx-alignment: center;" />

        <!-- Score Section -->
        <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="SCORE" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #0ea5e9;" />
            <Label fx:id="lblScore" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </VBox>

        <!-- Lives Section -->
        <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="LIVES" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #ec4899;" />
            <Label fx:id="lblLives" text="3" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </VBox>

        <!-- Level Section -->
        <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="LEVEL" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #10b981;" />
            <Label fx:id="lblLevel" text="1" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </VBox>

        <!-- Balls Counter -->
        <VBox fx:id="ballsContainer" spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 8;" visible="false" managed="false">
            <Label text="BALLS" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #fbbf24;" />
            <Label fx:id="lblBalls" text="1" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </VBox>

        <!-- Active Power-ups Section -->
        <VBox spacing="8" style="-fx-background-color: #1e293b; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="POWER-UPS" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #a78bfa;" />
            <VBox fx:id="powerUpsContainer" spacing="6">
                <Label fx:id="lblNoPowerUps" text="No active power-ups" style="-fx-font-size: 12px; -fx-text-fill: #8b93a5; -fx-font-style: italic;" />
            </VBox>
        </VBox>
    </VBox>

    <!-- RIGHT PANEL - GAME AREA -->
    <StackPane prefWidth="800">

        <!-- Background layer với viền -->
        <VBox style="-fx-background-color: #0f172a; -fx-padding: 8;">
            <AnchorPane style="-fx-background-color: linear-gradient(to bottom, #1e293b, #0f172a);
                               -fx-border-color: #0ea5e9;
                               -fx-border-width: 2;
                               -fx-border-radius: 4;
                               -fx-background-radius: 4;">

                <!-- Game Canvas -->
                <Canvas fx:id="gameCanvas" height="600" width="800" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />

                <!-- Pause Button - GÓC TRÊN BÊNPHẢI -->
                <Button fx:id="btnPause" prefHeight="52" prefWidth="52"
                        style="-fx-background-color: rgba(236, 72, 153, 0.9);
                               -fx-text-fill: white;
                               -fx-font-size: 20px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 10;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0.3, 0, 2);"
                        text="II"
                        AnchorPane.rightAnchor="12"
                        AnchorPane.topAnchor="12" />
            </AnchorPane>
        </VBox>

        <!-- Pause Overlay -->
        <fx:include fx:id="pauseOverlay" mouseTransparent="true" source="PauseOverlay.fxml" visible="false" />
    </StackPane>

</HBox>