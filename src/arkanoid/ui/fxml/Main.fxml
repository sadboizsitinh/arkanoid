<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="600" prefWidth="800" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arkanoid.ui.controller.MainController">
  <top>
      <VBox alignment="CENTER" spacing="6" style="-fx-padding: 40;" BorderPane.alignment="CENTER">
          <ImageView fitHeight="150" fitWidth="600" preserveRatio="true">
              <image>
                  <Image url="@../../assets/images/arkanoid-logo.png" />
              </image>
          </ImageView>
          <Label style="-fx-font-size: 20px; -fx-text-fill: #8b93a5;" text="Break all the brick" />
      </VBox>
  </top>
  <center>
      <AnchorPane>
         <children>
          <VBox alignment="CENTER" spacing="28">
            <HBox alignment="CENTER" spacing="24" />
          </VBox>
         <Button fx:id="btnExit" layoutX="250.0" layoutY="267.0" prefHeight="54" prefWidth="300" styleClass="button-alt" text="Exit" />
        <Button fx:id="btnHighScores" layoutX="414.0" layoutY="179.0" prefHeight="54" prefWidth="200" styleClass="button-alt" text="High Scores" />
        <Button fx:id="btnStart" layoutX="178.0" layoutY="179.0" prefHeight="54" prefWidth="200" styleClass="button-main" text="Start Game" />
         <Button fx:id="btnContinue" layoutX="250.0" layoutY="79.0" prefHeight="54" prefWidth="300" styleClass="button-main" text="Continue Game" />
         </children>
      </AnchorPane>
  </center>
</BorderPane>
