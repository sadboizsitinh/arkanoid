<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arkanoid.ui.controller.MainController">
    <top>
        <VBox alignment="CENTER" spacing="6" style="-fx-padding: 15;" BorderPane.alignment="CENTER">
            <ImageView fitHeight="300" fitWidth="500" preserveRatio="true">
                <image>
                    <Image url="@../../assets/images/arkanoid-logo.png" />
                </image>
            </ImageView>
        </VBox>
    </top>
    <center>
        <AnchorPane>
            <children>
                <!-- Continue Button (ẩn nếu không có save) -->
                <Button fx:id="btnContinue" layoutX="296.0" layoutY="-21.0" prefHeight="54" prefWidth="200.0" styleClass="button-main" text="Continue" />

                <!-- Row 1: Start Game và Versus -->
                <HBox alignment="CENTER" layoutX="178.0" layoutY="62.0" spacing="24">
                    <Button fx:id="btnStart" prefHeight="54" prefWidth="192.0" styleClass="button-main" text="Start Game" />
                    <Button fx:id="btnVersus" prefHeight="54" prefWidth="210.0" style="-fx-background-color: linear-gradient(to bottom, #a855f7, #9333ea, #7e22ce);                                -fx-effect: dropshadow(gaussian, rgba(168, 85, 247, 0.6), 20, 0.5, 0, 2);" styleClass="button-main" text="Versus Mode" />
                </HBox>

                <!-- Row 2: High Scores -->
                <Button fx:id="btnHighScores" layoutX="296.0" layoutY="136.0" prefHeight="54" prefWidth="200" styleClass="button-alt" text="High Scores" />

                <!-- Row 3: Exit -->
                <Button fx:id="btnExit" layoutX="296.0" layoutY="210.0" prefHeight="54" prefWidth="200.0" styleClass="button-alt" text="Exit" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
