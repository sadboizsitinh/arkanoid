<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="24" style="-fx-padding: 30;" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arkanoid.ui.controller.HighScoresController">

    <!-- Title Section vá»›i Galaxy Effect -->
    <VBox alignment="CENTER" spacing="8">
        <Label text="ðŸŒŸ" style="-fx-font-size: 48px;"/>
        <Label text="HIGH SCORES" style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #06b6d4, #a78bfa, #ec4899); -fx-effect: dropshadow(gaussian, rgba(6, 182, 212, 0.8), 20, 0.6, 0, 0);"/>
        <Label text="Top 10 High Scores" style="-fx-font-size: 16px; -fx-text-fill: #8b93a5; -fx-font-style: italic;"/>
    </VBox>

    <!-- Scores Container vá»›i ScrollPane -->
    <ScrollPane fitToWidth="true" prefHeight="350" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-width: 0;">
        <VBox fx:id="scoresContainer" alignment="TOP_CENTER" spacing="12" style="-fx-padding: 10;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
        </VBox>
    </ScrollPane>

    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="btnBack" prefHeight="52" prefWidth="220" styleClass="button-main" text="Back to Menu"/>
        <Button fx:id="btnClear" prefHeight="52" prefWidth="220" styleClass="button-alt" text="Clear All Scores"/>
    </HBox>

</VBox>